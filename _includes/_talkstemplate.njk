---
layout: _sitetemplate.njk
---

<section id="headline" class="green">
    <div class="centered">
        <h1>Talks<ul id="v_nav">
            {%- for post in collections.talksNavi | reverse -%}
            <li {% if page.url == post.url %} class="active" {% endif %}>
                <a href="{{ post.url }}">{{ post.data.yeartitle }}</a>
            </li>
            {%- endfor -%}
            </ul>
        </h1>
    </div>
</section>


<div id="main" role="main">
    <div id="content"> <!-- narrowed down to 15 in this case -->
        <article>
            <section id="{nameOfArticle}" class="clearfix">
                            
                <div class="teaser_outer">
                    <div class="teaser_inner">
                        {{ content | safe }}
                    </div>
                </div>

            </section>
        </article>
    </div> <!--! end of #content -->
</div>